{
	"name": "@windmill/components",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"generate-backend-client": "openapi --input ../backend/windmill-api/openapi.yaml --output ./src/lib/gen --useOptions && sed -i '213 i \\    request.referrerPolicy = \"no-referrer\"\n' src/lib/gen/core/request.ts",
		"prepublishOnly": "npm run package",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"main": "./src/lib/index.ts",
	"type": "module",
	"peerDependencies": {
		"svelte": "^3.54.0"
	},
	"devDependencies": {
		"@fortawesome/free-brands-svg-icons": "^6.4.0",
		"@fortawesome/free-solid-svg-icons": "^6.4.0",
		"@playwright/test": "^1.28.1",
		"@popperjs/core": "^2.11.7",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.5.0",
		"@sveltejs/package": "^2.0.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"ag-grid-svelte": "^0.1.4",
		"chart.js": "^4.2.1",
		"chartjs-adapter-date-fns": "^3.0.0",
		"chartjs-plugin-zoom": "^2.0.1",
		"d3-zoom": "^3.0.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"highlight.js": "^11.7.0",
		"lucide-svelte": "^0.129.0",
		"openapi-typescript-codegen": "^0.23.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"publint": "^0.1.9",
		"svelte": "^3.54.0",
		"svelte-awesome": "^3.2.0",
		"svelte-awesome-color-picker": "^2.4.1",
		"svelte-check": "^3.0.1",
		"svelte-highlight": "^7.2.0",
		"svelte-popperjs": "^1.3.2",
		"svelte-range-slider-pips": "^2.1.1",
		"svelte-splitpanes": "^0.7.13",
		"tailwind-merge": "^1.11.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.2.0",
		"vitest": "^0.25.3",
		"postcss": "^8.4.14",
		"postcss-load-config": "^4.0.1",
		"svelte-preprocess": "^4.10.7",
		"autoprefixer": "^10.4.7",
		"tailwindcss": "^3.1.5",
		"@tailwindcss/forms": "^0.5.2",
		"@tailwindcss/typography": "^0.5.3"
	}
}
